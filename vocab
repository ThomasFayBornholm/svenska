	DEBUG = !DEBUG;
	if (DEBUG) {
		console.log("Entering debug mode...");
		$('#iDebugTxt').text("DEBUG");
		$('#iDebug').css("color","gray");
	}  else {
		$('#iDebug').css("color","");
		$('#iDebugTxt').text("");
		console.log("Leaving debug mode...");
	}
}
function setClassGuessWrapper(ev) {

function defEntry(ev) {
	if (ev.location === 2) {
		if (ev.key === "Control") {			
			if ($('#iPutDef').css("display") === "block") {
				putDef('',2);
				$('#iInput').val("");
				focusInput()
				seekWord(CUR_WORD);
			}
			if ($('#iPutMore').css("display") === "block") { 
				putMore()
			}
		}
	} else if (ev.location === 3) {
		if (ev.key === "0") {
			ev.preventDefault();
			putDef('',0);
			$('#iInput').val("");
			focusInput()
			seekWord(CUR_WORD);
		} else if (ev.key === "1") {
			ev.preventDefault();
			putDef('',1);
			$('#iInput').val("");
			focusInput()
			seekWord(CUR_WORD);
		}
	}	
	if (ev.key === "Escape") {		
		$('#iDefDiv').css("display","none");
	}
}
